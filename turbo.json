{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": [
    "DATABASE_TYPE",
    "DATABASE_URL",
    "DATABASE_HOST",
    "DATABASE_PORT",
    "DATABASE_NAME",
    "DATABASE_USER",
    "DATABASE_PASSWORD",
    "DATABASE_SSL",
    "AUTH_JWT_SECRET",
    "NEXT_PUBLIC_MEDIA_URL",
    "WORKER_URL",
    "WORKER_API_URL",
    "NEXT_PUBLIC_WORKER_URL",
    "WORKER_API_KEY",
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_PHOTOGRAPHER_NAME",
    "NEXT_PUBLIC_PHOTOGRAPHER_TAGLINE",
    "TURNSTILE_SECRET_KEY",
    "CLOUDFLARE_API_TOKEN",
    "CLOUDFLARE_ZONE_ID",
    "NEXT_PUBLIC_POLLING_INTERVAL",
    "NEXT_PUBLIC_ADMIN_POLLING_INTERVAL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
